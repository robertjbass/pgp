{
  "name": "@pgp/cli",
  "version": "1.0.0",
  "description": "Interactive CLI tool for PGP encryption/decryption with SQLite key management",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pgp": "./dist/pgp-tool.js"
  },
  "scripts": {
    "dev": "tsx --env-file=../../.env src/pgp-tool.ts",
    "build": "tsc && cp src/schema.sql dist/schema.sql",
    "start": "node --env-file=../../.env dist/pgp-tool.js"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "better-sqlite3": "^12.4.1",
    "chalk": "^5.6.2",
    "clipboardy": "^5.0.0",
    "inquirer": "^12.10.0",
    "openpgp": "^6.2.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
